<?xml version="1.0" encoding="utf-8"?>
<!-- Background circle for the magnitude value -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <gradient
                android:angle="45"
                android:startColor="#9E2EE8"
                android:endColor="#4F7EFF"
                android:type="linear"
                />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_my_location"/>
</layer-list>
