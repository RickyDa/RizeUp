<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >
    <corners
        android:radius="14dp"
        />
    <gradient
        android:gradientRadius="100"
        android:centerColor="#5036FF"
        android:startColor="#E8E8E8"
        android:endColor="#000000"
        android:type="radial"
        />
    <size
        android:width="60dp"
        android:height="60dp"
        />
    <stroke
        android:width="1dp"
        android:color="#fff"
        />
</shape>