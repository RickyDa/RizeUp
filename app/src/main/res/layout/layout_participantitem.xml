<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:id="@+id/participant_layout"
    android:layout_margin="5dp"
    android:background="@drawable/participant_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/participant_number"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/circle"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/participant_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/participant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/participant_deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_delete"
        app:backgroundTint="#A83232"
        app:elevation="1dp"
        app:fabSize="mini"
        android:layout_margin="3dp"
        app:tint="@android:color/white"
        android:visibility="invisible"
        />

</LinearLayout>
